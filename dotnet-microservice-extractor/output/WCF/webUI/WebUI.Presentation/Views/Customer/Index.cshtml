@model IEnumerable<WebUI.Presentation.Models.Customer>

@{
    ViewData["Title"] = "Customer List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => customer.Id)</td>
                <td>@Html.DisplayFor(modelItem => customer.Name)</td>
                <td>@Html.DisplayFor(modelItem => customer.Email)</td>
                <td>@Html.DisplayFor(modelItem => customer.PhoneNumber)</td>
            </tr>
        }
    </tbody>
</table>